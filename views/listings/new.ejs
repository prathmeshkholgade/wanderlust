<% layout("/layouts/boilerplate") %>

    <div class="row m-auto">
        <div class="col-8 offset-2">
          <br>
  <h3>Create A New Listing</h3>
  <form method="post" action="/listings"   class="needs-validation" novalidate enctype="multipart/form-data">
    <div class="mb-3">
      <label for="title">Title</label>
      <input
        type="text"
        name="listing[title]"
        class="form-control"
        placeholder="Add A Catchy Title"
        id="title"
        required
      />
      <div class="valid-feedback">
      Title  Looks good!
      </div>
      <div class="invalid-feedback">
       please write title
      </div>
    </div>
    <div class="mb-3">
      <label for="description">Description</label>
      <textarea
        name="listing[description]"
        class="form-control"
        id="description"
        cols="30"
        rows="4"
        required
      ></textarea>
      <div class="invalid-feedback">
        price enter a short description
        </div>
    </div class="mb-3">
    <div class="mb-3">
      <label for="Image">Upload Listing Image</label>
      <input
        type="file"
        class="form-control"
        name="listing[image]"
        id="Image"
        required
      />
    </div>
    <div class="row">
      <div class="mb-3 col-md-4">
        <label for="price">Price</label>
        <input
          type="number"
          id="price"
          name="listing[price]"
          class="form-control"
          placeholder="1200"
          required
        />
        <div class="invalid-feedback">
          price should be valid
          </div>
      </div>
        <div class="mb-3 col-md-8">
          <label for="country">Country</label>
          <input
            type="text"
            id="country"
            name="listing[country]"
            class="form-control"
            placeholder="India"
            required
          />
          <div class="invalid-feedback">
          country name should  be valid
            </div>
        </div>
    
    </div>
    
    <div class="mb-3">
      <label for="location">Location</label>
      <input
        type="text"
        id="location"
        class="form-control"
        name="listing[location]"
        placeholder="Jaipur,Rajastha"
        required
      />
      <div class="invalid-feedback">
      location should be valid
        </div>
    </div>
    

    <button class=" btn add-btn">Add</button>
    <br><br>
  </form>
</div>
</div>

